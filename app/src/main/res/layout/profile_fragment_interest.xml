        <com.hootsuite.nachos.NachoTextView
            android:id="@+id/profile_genre_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_genre_label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            app:chipTextSize="15sp"
            app:chipTextColor="#434343"
            android:background="@drawable/profile_input_bg" />

        <TextView
            android:id="@+id/profile_author_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/profile_language_txt"
            android:layout_below="@id/profile_genre_txt"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_regular"
