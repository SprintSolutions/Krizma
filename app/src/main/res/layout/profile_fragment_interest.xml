<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sprint.krizma.Profile.EditInterestFragment"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/profile_interest_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/profile_language_txt"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="You are Interested in"
            android:textColor="#3a3a3a"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/profile_language_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/profile_language_txt"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/montserrat_regular"
            android:labelFor="@id/profile_language_txt"
            android:text="Languages"
            android:textColor="@color/customBlack"
            android:textSize="15sp" />

        <com.hootsuite.nachos.NachoTextView
            android:id="@+id/profile_language_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/profile_genre_txt"
            android:layout_below="@+id/profile_language_label"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            app:chipTextSize="15sp"
            app:chipTextColor="#434343"
            android:background="@drawable/profile_input_bg" />

