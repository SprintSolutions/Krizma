<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sprint.krizma.Main.FavouritesFragment"
    android:id="@+id/favourites_fragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.TabLayout
            android:id="@+id/favourite_tab"
            app:tabIndicatorColor="@color/statusbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/favourite_pager"
            android:layout_below="@id/favourite_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </RelativeLayout>

</FrameLayout>
