<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sprint.krizma.Main.UserFragment"
    android:id="@+id/user_fragment"
    android:background="@color/white">



    <RelativeLayout
        android:id="@+id/user_profile_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/user_profile_background"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:src="@color/black" />

        <TextView
            android:id="@+id/user_profile_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/user_profile_edit"
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/montserrat_regular"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/user_profile_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_profile_heading"
            android:layout_alignEnd="@+id/user_profile_genre"
            android:fontFamily="@font/montserrat_regular"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/user_profile_bg_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:src="@drawable/user_third_bg" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_pic_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="@null"
            android:src="@drawable/user_dummy_pic" />

        <ImageView
            android:id="@+id/user_profile_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/user_profile_pic_btn"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/user_profile_heading"
            android:src="@drawable/user_online_icon" />

        <TextView
            android:id="@+id/user_profile_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_profile_pic_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text=""
            android:visibility="invisible"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="#222222"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/user_profile_details"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_profile_name_txt"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/user_profile_age_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Age:"
                android:textColor="#585858"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/user_profile_age_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text=""
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="#3a3a3a"
                android:layout_marginLeft="5dp"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/user_profile_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/user_border_verticle" />

            <ImageView
                android:id="@+id/user_profile_gender_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/user_gender_icon" />

            <TextView
                android:id="@+id/user_profile_gender_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text=""
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:textColor="#3a3a3a"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/user_profile_border_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/user_border_verticle" />


            <ImageView
                android:id="@+id/user_profile_country_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/user_country_icon" />

            <TextView
                android:id="@+id/user_profile_country_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#3a3a3a"
                android:text=""
                android:visibility="gone"
                android:textSize="15sp" />

        </LinearLayout>

        <!--<ImageButton-->
            <!--android:id="@+id/user_msg_btn"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignEnd="@+id/user_name_txt"-->
