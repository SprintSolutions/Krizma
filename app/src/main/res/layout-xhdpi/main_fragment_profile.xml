        <ImageView
            android:id="@+id/user_profile_bg_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/user_profile_bg_top"
            android:background="@null"
            android:src="@drawable/user_second_bg" />

        <ImageView
            android:id="@+id/user_profile_language"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_bg_top"
            android:layout_marginTop="10dp"
            android:src="@drawable/user_language" />

        <ImageView
            android:id="@+id/user_profile_border_3"
            android:src="@drawable/user_border_verticle_2"
            android:layout_toRightOf="@id/user_profile_language"
            android:layout_alignTop="@id/user_profile_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/user_profile_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_profile_language"
            android:layout_toRightOf="@+id/user_profile_language"
            android:src="@drawable/user_author" />

        <ImageView
            android:id="@+id/user_horizontal_border"
            android:src="@drawable/user_horizontal_border"
            android:layout_below="@id/user_profile_language"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/user_profile_border_4"
            android:src="@drawable/user_border_verticle_2"
            android:layout_toRightOf="@id/user_profile_author"
            android:layout_alignTop="@id/user_profile_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/user_profile_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_profile_author"
            android:layout_toRightOf="@+id/user_profile_author"
            android:src="@drawable/user_genre_active" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/user_horizontal_border"
            android:layout_alignStart="@+id/user_profile_language"
            android:layout_below="@+id/user_profile_language"
            android:scrollbarThumbHorizontal="@color/blue"
            android:scrollbarSize="3dp"
            >

            <LinearLayout
                android:id="@+id/user_profile_interests"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>




        <ImageView
            android:id="@+id/user_profile_bg_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_below="@+id/user_profile_bg_center"
            android:src="@drawable/user_third_bg" />

        <TextView
            android:id="@+id/user_profile_books_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_bg_center"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/user_profile_pic_btn"
            android:textColor="#1f97f3"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:text="Added Books >" />


        <LinearLayout
            android:id="@+id/user_profile_books"
            android:layout_below="@id/user_profile_books_label"
            android:layout_width="240dp"
            android:layout_height="105dp"
            android:layout_alignStart="@+id/user_profile_language"
            android:orientation="horizontal">
        </LinearLayout>


        <ImageView
            android:id="@+id/user_profile_books_last"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/user_profile_books"
            android:layout_alignTop="@id/user_profile_books"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/user_book_number_bg"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/user_profile_book_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/user_profile_books_last"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_semi_bold"
            android:text="+25"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:visibility="invisible" />



