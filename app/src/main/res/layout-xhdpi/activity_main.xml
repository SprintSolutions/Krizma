<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sprint.krizma.MainActivity"
    android:background="@color/white"
    android:id="@+id/main_activity">

    <Toolbar
        android:id="@+id/main_toolbar"
        android:textAlignment="center"
        android:background="@drawable/main_header_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/main_toolbar_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_bold"
        android:text="BROWSE"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_below="@id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"/>

    <ImageView
        android:src="@drawable/main_menu_bg"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/main_notification_btn"
        android:src="@drawable/main_notification_inactive"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/main_message_btn"
        android:src="@drawable/main_message_inactive"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/main_notification_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/main_search_btn"
        android:src="@drawable/main_search_inactive"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/main_message_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/main_favourite_btn"
        android:src="@drawable/main_favourite_inactive"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/main_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/main_profile_btn"
        android:src="@drawable/main_profile_inactive"
        android:background="@null"
        android:layout_toRightOf="@+id/main_favourite_btn"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
