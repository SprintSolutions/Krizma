<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sprint.krizma.EditProfileActivity"
    android:background="@color/white"
    android:id="@+id/edit_profile_activity">


    <com.sprint.krizma.CustomComponents.CustomViewPager
        android:id="@+id/edit_profile_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        />

    <TextView
        android:id="@+id/edit_profile_basic_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edit_profile_back_btn"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Basic info"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/edit_profile_skip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_profile_basic_txt"
        android:layout_alignBottom="@+id/edit_profile_basic_txt"
        android:layout_alignEnd="@+id/edit_profile_next_btn"
        android:fontFamily="@font/montserrat_regular"
        android:text="Skip"
        android:textColor="@color/white"
        android:textSize="15sp" />



    <ImageButton
        android:id="@+id/edit_profile_back_btn"
        android:src="@drawable/profile_back_btn"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/edit_profile_next_btn"
        android:src="@drawable/profile_next_btn"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <!--<ImageView-->
    <!--android:id="@+id/profile_footer"-->
    <!--android:src="@drawable/profile_bottom_bg"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" />-->

</RelativeLayout>
