<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sprint.krizma.LoginActivity"
    android:background="@drawable/login_bg"
    android:id="@+id/login_activity">



    <ImageView
        android:id="@+id/login_logo"
        android:src="@drawable/app_logo"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <EditText
        android:id="@+id/login_email_txt"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="15sp"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@null"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:hint="Email"
        android:textColorHint="@color/white"
        android:paddingLeft="80dp"
        android:background="@drawable/login_email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/login_password_txt"
        android:inputType="textPassword"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="15sp"
        android:textCursorDrawable="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_password_txt"
        android:layout_below="@id/login_email_txt"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:paddingLeft="80dp"
        android:hint="Password"
        android:textColorHint="@color/white"
        />

    <ImageButton
        android:id="@+id/login_sign_in_btn"
        android:src="@drawable/login_signin_btn"
        android:background="@null"
        android:layout_below="@id/login_password_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/login_txt"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:fontFamily="@font/opensans_semi_bold"
        android:textSize="15sp"
        android:text="@string/sign_in_text"
        android:layout_below="@id/login_sign_in_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageButton
        xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:src="@drawable/login_fb_btn"
        android:background="@null"
        android:id="@+id/login_facebook_btn"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/login_linkedin_btn"
        android:layout_below="@id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/login_linkedin_btn"
        android:src="@drawable/login_linkedin_btn"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_below="@id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/login_gplus_btn"
        android:src="@drawable/login_gplus_btn"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_below="@id/login_txt"
        android:layout_toRightOf="@id/login_linkedin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/login_no_account_txt"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/opensans_regular"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:text="@string/have_no_account"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/login_sign_up_txt"
        android:textColor="@color/white"
        android:text="@string/sign_up"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/opensans_regular"
        android:textSize="13sp"
        android:layout_toRightOf="@id/login_no_account_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/login_forget_password_txt"
        android:textColor="@color/white"
        android:text="@string/forgot_password"
        android:fontFamily="@font/opensans_regular"
        android:textSize="13sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"/>

    <ProgressBar
        android:id="@+id/login_progress"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:indeterminateTint="@color/statusbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
